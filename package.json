{
  "name": "lbff-the-last-caretaker-db",
  "version": "1.0.0",
  "description": "Lightbender's The Last Caretaker POI Tracker",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "ca.lightbender255.lbff-tlc-poi-tracker",
    "productName": "The Last Caretaker POI Tracker",

    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "msi"
    },
    "msi": {
      "oneClick": false,
      "perMachine": false
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Game Tools"
    }
  },
  "keywords": [
    "electron",
    "sqlite",
    "database",
    "game",
    "tools"
  ],
  "author": {
    "name": "lightbender255",
    "email": "lightbender255@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^23.6.0",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "sql.js": "^1.10.3"
  }
}
