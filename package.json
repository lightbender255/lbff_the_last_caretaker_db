{
  "name": "lbff-the-last-caretaker-db",
  "version": "1.0.0",
  "description": "The Last Caretaker Database Viewer",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "ca.lightbender255.lbff-db-viewer",
    "productName": "LBFF DB Viewer",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "msi"
    },
    "msi": {
      "oneClick": false,
      "perMachine": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  },
  "keywords": [
    "electron",
    "sqlite",
    "database"
  ],
  "author": "lightbender255",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^23.6.0",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "sql.js": "^1.10.3"
  }
}
